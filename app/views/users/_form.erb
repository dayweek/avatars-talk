<div class="control-group">
  <%= form.label :login, :class => "control-label" %>
  <div class="controls">
    <%= form.text_field :login, :class => "input-xlarge" %>
    <p class="help-block">Minimum length is 3 characters (letters, numbers, spaces, and .-_@).</p>
  </div>
</div>
<div class="control-group">
  <%= form.label :password, form.object.new_record? ? nil : 'Change password', class: 'control-label'
%>
  <div class="controls">
    <%= form.password_field :password, :class => 'input-xlarge' %>
    <p class="help-block">Minimum length is 4 characters.</p>
  </div>
</div>

<div class="control-group">
  <%= form.label :password_confirmation, class: 'control-label' %>
  <div class="controls">
    <%= form.password_field :password_confirmation, class: 'input-xlarge' %>
    <p class="help-block">Minimum length is 4 characters.</p>
  </div>
</div>

<div class="control-group">
  <%= form.label :avatar_id, 'Select your avatar', class: 'control-label' %>
  <div class="controls">
    <%= form.collection_select(:avatar_id, Avatar.all, :id, :name) %>
  </div>
</div>
