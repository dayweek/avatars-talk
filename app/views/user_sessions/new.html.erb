<h2>Login</h2>

<%= form_for @user_session, url: user_session_path, html: { class: 'form-horizontal' } do |form| %>
  <% if @user_session.errors.any? %>
    <div class="alert alert-error">
      <h2>Oh snap! <%= pluralize(@user_session.errors.count, "error") %> occured while processing your form:</h2>

      <ul>
      <% @user_session.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
  <div class="control-group">
    <%= form.label :login, class: 'control-label' %>
    <div class="controls">
      <%= form.text_field :login, class: 'input-xlarge' %>
    </div>
  </div>
  <div class="control-group">
    <%= form.label :password, class: 'control-label' %>
    <div class="controls">
      <%= form.password_field :password, class: 'input-xlarge' %>
    </div>
  </div>
  <div class="control-group">
    <%= form.label :remember_me, class: 'checkbox' %>
    <div class="controls">
      <%= form.check_box :remember_me %>
    </div>
  </div>
  <div class="form-actions">
    <%= form.submit 'Login', class: 'btn btn-primary' %>
  </div>
</fieldset>
<% end %>