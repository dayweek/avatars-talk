<%= form_for @post, html: { class: 'form-horizontal' } do |form| %>
  <% if @post.errors.any? %>
    <div class="alert alert-error">
      <h2>Oh snap! <%= pluralize(@post.errors.count, 'error') %> occured while processing your form:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>

  <div class="control-group">
    <%= form.label :text, class: 'control-label'  %>
    <div class="controls">
      <%= form.text_area :text, rows: 3, class: 'input-xlarge' %>
    </div>
  </div>
  <div class="form-actions">
    <%= form.submit 'Submit', class: 'btn btn-primary' %>
  </div>
  </fieldset>
<% end %>
